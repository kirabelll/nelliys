  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "better-auth": "^1.3.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.11",
    "prisma": "^6.13.0",
    "tsdown": "^0.12.9",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2"
  }
